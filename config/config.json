{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Centralized configuration for MCP Foundry deployment and agents",
  "project": {
    "endpoint": "https://mcp-foundry-7xlf5mx5xvxjm.services.ai.azure.com/api/projects/mcp-foundry-project",
    "name": "mcp-foundry-project",
    "location": "swedencentral",
    "modelDeployment": "gpt-4o-mini"
  },
  "agents": {
    "sql": {
      "name": "mssql-mcp-agent",
      "instructions": "You are a helpful SQL assistant that can connect to SQL databases and execute queries. Use the available MCP tools to help users manage and query their SQL databases. Always provide clear explanations of what you're doing.",
      "mcpServer": {
        "url": "https://sqlmcp-dev-mcp-dev.purplecliff-cf0553ec.swedencentral.azurecontainerapps.io/mcp",
        "label": "mssql_mcp",
        "authType": "apiKey",
        "apiKeySource": "keyVault"
      },
      "allowedTools": []
    },
    "github": {
      "name": "github-mcp-agent",
      "instructions": "You are a helpful agent that can use MCP tools to assist users. Use the available MCP tools to answer questions and perform tasks related to the Azure REST API specifications repository.",
      "mcpServer": {
        "url": "https://gitmcp.io/Azure/azure-rest-api-specs",
        "label": "github",
        "authType": "none"
      },
      "allowedTools": [
        "search_azure_rest_api_code"
      ]
    }
  },
  "infrastructure": {
    "resourceGroup": "mcp",
    "location": "swedencentral",
    "foundry": {
      "prefix": "mcp-foundry",
      "modelName": "gpt-4o-mini",
      "modelVersion": "2024-07-18",
      "modelCapacity": 150
    },
    "mcp": {
      "resourcePrefix": "mssql-mcp",
      "environmentName": "prod",
      "containerApp": {
        "name": "sqlmcp-dev-mcp-dev",
        "url": "https://sqlmcp-dev-mcp-dev.purplecliff-cf0553ec.swedencentral.azurecontainerapps.io",
        "image": "mcpfoundryacr.azurecr.io/mssql-mcp-foundry:latest"
      },
      "sql": {
        "serverName": "mcp-ilona",
        "databaseName": "contoso",
        "fqdn": "mcp-ilona.database.windows.net"
      },
      "keyVault": {
        "name": "kvsqlmcpdesryucsll",
        "apiKeySecretName": "mcp-api-key"
      }
    }
  },
  "server": {
    "port": 3000,
    "nodeEnv": "development",
    "allowedOrigins": [
      "http://localhost:3000",
      "https://ai.azure.com"
    ],
    "enableRateLimiting": true,
    "logLevel": "info"
  }
