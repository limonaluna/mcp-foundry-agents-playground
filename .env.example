# MCP Server Configuration
# Copy to .env and set your values

# ===========================================
# REQUIRED: Basic Configuration
# ===========================================

# Project name (lowercase, max 10 chars) - creates <project>-<env>-rg resources
PROJECT_NAME=

# Azure region
AZURE_LOCATION=swedencentral

# Your existing SQL database
SERVER_NAME=your-server.database.windows.net
DATABASE_NAME=your-database

# ===========================================
# OPTIONAL: Existing Foundry Resources
# ===========================================
# Uncomment if you have existing Azure AI Foundry resources

# AZURE_AI_ENDPOINT=https://my-project.services.ai.azure.com/api/projects/my-project
# AZURE_AI_PROJECT_NAME=my-project
# MODEL_DEPLOYMENT=gpt-4o

# ===========================================
# OPTIONAL: Existing Infrastructure
# ===========================================
# Uncomment to use existing resources

# RESOURCE_GROUP=my-existing-rg
# CONTAINER_APP_NAME=my-existing-app
# KEY_VAULT_NAME=my-existing-vault
# MCP_ENDPOINT=https://my-mcp-server.azurecontainerapps.io/mcp

# ===========================================
# OPTIONAL: Deployment Settings
# ===========================================

# Environment (dev, test, prod)
NODE_ENV=dev

# CORS origins
ALLOWED_ORIGINS=https://ai.azure.com

# Rate limiting
ENABLE_RATE_LIMITING=true

# ===========================================
# OPTIONAL: Model Configuration
# ===========================================

# FOUNDRY_MODEL_NAME=gpt-4o-mini
# FOUNDRY_MODEL_VERSION=2024-07-18
# FOUNDRY_MODEL_CAPACITY=150

# ===========================================
# OPTIONAL: Agent Names  
# ===========================================

# SQL_AGENT_NAME=my-sql-agent
# GITHUB_AGENT_NAME=my-github-agent

# ===========================================
# LOCAL DEVELOPMENT
# ===========================================

# PORT=3000
# CONNECTION_TIMEOUT=120
# SQL_AUTH_MODE=auto
# READONLY=false
# LOG_LEVEL=info
